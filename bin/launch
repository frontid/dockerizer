#!/bin/bash

function dkHelp () {
  echo "Dockerizer command: launch"
  echo
  echo "Open a browser tab in the project URL."
}

while [ -n "$1" ]; do
    case "$1" in
        --dkhelp)
            dkHelp
            exit
            ;;
    esac
done

bin_path="`dirname $0`"

# Load project specific variables.
set -o allexport
source "${bin_path}/../.env"
set +o allexport

url=$PROJECT_BASE_URL

echo -e "Launch http://\e[32m$url\e[0m in browser."
x-www-browser "http://$url"
